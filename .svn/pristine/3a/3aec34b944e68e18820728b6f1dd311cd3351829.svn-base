<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" type="text/css" href="../css/aui.css" />
	<meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>title</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css"/>
    <style>
       .aui-bar-nav{background:#fff;color:#000;margin-bottom:0.5rem}
       .title{display:inline-block}
       .aui-list-view-cell:after{border:none !important}
       .hightlight{background:#41c7db}
    </style>
</head>
<body>
	<header class="aui-bar aui-bar-nav" id="header" style='padding-top:20px;'>
		<a class="aui-btn aui-pull-left" style="background:none" onclick="api.closeWin();">
			<span class="aui-iconfont aui-icon-left " style="color:#ff6600"></span>
		</a>
		<div class="aui-title">签到管理</div>
	</header>
	<div class="aui-content" id='evaluation'>	
		   <script id="evaluationtmpl" type="text/x-dot-template">
			  {{ for(var i in it) { }}
			     <ul class="aui-list-view">
			       	 <li class="aui-list-view-cell" id='joblist' onclick="openWin('{{it[i].id}}')">
			       		<div class='title'>{{it[i].name}}</div>
			         </li>
		         </ul>
			  {{ } }}
	       </script>
	</div>	

   
</body>
<script type="text/javascript" src="../script/jquery-1.7.2.min.js"></script>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript">
  $(function(){
   $('.aui-list-view-cell').click(function(){
   $(this).addClass('hightlight').siblings().removeClass('hightlight');
   })
})
	apiready = function(){
	  var header=$api.dom('header');
      var headerH=$api.offset(header).h;
      $api.fixStatusBar(headerH);
	};
	function fnopenWinPositioname(){
	   api.openWin({
	       name: 'positionName',
	       url: 'positionName.html'
       });	
	}
	function request(){
	    api.ajax({
	     url:'http://106.14.69.92/Appmanager/Release/sign?wid='+369
     },function(ret,err){
     	if(ret){
     	 console.log(JSON.stringify(ret))
     	var data=ret;
        var evalText = doT.template($("#evaluationtmpl").text());
		$("#evaluation").html(evalText(data));
     	 
     	}
     });	
	}
	function openWin(id){
		api.openWin({
		    name: 'positionmsg',
		    url: 'positionmsg.html',
		    pageParam:{'id':id}
	    });
	}
</script>
</html>












