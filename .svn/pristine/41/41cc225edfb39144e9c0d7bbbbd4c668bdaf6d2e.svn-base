body{ margin:0; padding:0; font-size:13px; background:url(../image/bg.gif) repeat; color:#333333;}
h3{ width:600px; height:60px; margin:50px auto 0 auto; text-align:center; line-height:60px; font-size:30px; font-weight:600; text-shadow:0px 1px 0px rgba(255,255,255,0.5);}
h4{ width:800px; height:20px; line-height:20px; margin:0 auto; font-size:16px; text-align:right;}
h4 a{ color:#00ccff; text-decoration:none;}
div.demo{ width:600px; height:320px; line-height:20px; padding-top:20px; border-top:2px dashed #cecece; margin:30px auto; }



/*Layer*/
.Smohan_Layer_Shade{position:fixed; _position:absolute; zoom:1; top:0; left:0; width:100%; height:100%; overflow:hidden; background:rgba(0,0,0,0.2); z-index:22;}
.Smohan_Layer_box{ min-width:290px; height:auto; padding:10px; background:#ffffff; position:fixed; _position:absolute; top:50%;left:55%; overflow:hidden; z-index:99999;-moz-border-radius:20px;-webkit-border-radius:20px;
border-radius:15px;}
.Smohan_Layer_box h3{ display:block; width:100%; height:30px; line-height:30px; padding:0px 0px 10px 0px; margin:0; overflow:hidden;}
.Smohan_Layer_box h3 .text{ float:left;font-size:16px; font-family:'Microsoft JhengHei','Microsoft YaHei', Arial, sans-serif; font-weight:600; color:#00ccff; text-indent:0.5em; display:block;}
.Smohan_Layer_box .layer_content{ display:block; width:100%; height:100%; margin-bottom:10px; padding:0; overflow:hidden; position:relative;}
.Smohan_Layer_box .layer_content .loading{ display:block; width:36px; height:36px; background:url(../image/Load.gif) center center no-repeat; position:absolute; top:0; left:0;}
/*Share*/
#Share{ display:none; width:280px; height:150px; padding:0 10px;}
#Share ul{ margin:0; padding:0; list-style-type:none;}
#Share ul li{ float:left; display:block; width:50px; height:50px;margin-left:5px; margin-right:5px; cursor:pointer; position:relative;}
#Share ul li a{ display:block; width:28px; height:28px; margin-left:11px; margin-top:12px;}
#Share ul li span{ display:block;width:40px;height:10px;background:url(../image/share_shade.png) 0px 0px no-repeat; position:absolute; left:5px; bottom:0px;}
#Share ul li a.share0{ background:url(../image/qq.png) no-repeat}
#Share ul li a.share01{ background:url(../image/weixin.png) no-repeat;background-size:28px 26px;}
#Share ul li a.share1{ background:url(../image/share_icon.png) 0px 0px;}
#Share ul li a.share2{ background:url(../image/share_icon.png) -28px 0px;}
#Share ul li a.share3{ background:url(../image/share_icon.png) -56px 0px;}
#Share ul li a.share4{ background:url(../image/share_icon.png) -84px 0px;}
#Share ul li a.share5{ background:url(../image/share_icon.png) -112px 0px;}
#Share ul li a.share6{ background:url(../image/share_icon.png) -140px 0px;}

