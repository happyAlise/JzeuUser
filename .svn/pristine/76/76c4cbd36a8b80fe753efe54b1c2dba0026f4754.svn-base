<script type="text/javascript">
     function fnopenjobwin(){
         api.openWin({
	      name: 'jobdetail',
	      url: './jobdetail.html'
      });
     }
     function fnopenissuewin(){
      api.openWin({
	      name: 'issuejob',
	      url: './issuejob.html'
      });
     }
	function tabswitch (type) {
			var col1 = document.getElementById('col1');
			var col2 = document.getElementById('col2');
			var col3 = document.getElementById('col3');

			var indicator1 = document.getElementById("indicator1");
			var indicator2 = document.getElementById("indicator2");
			var indicator3 = document.getElementById("indicator3");

			var list1 = document.getElementById("list1");
			var list2 = document.getElementById("list2");
			var list3 = document.getElementById("list3");

			if (type == 1) {
				col1.style.color= "#f60";
				col2.style.color= "#000";
				col3.style.color= "#000";

				indicator1.style.display = "block";
				indicator2.style.display = "none";
				indicator3.style.display = "none";
				list1.style.display = "block";
				list2.style.display = "none";
				list3.style.display = "none";
			}
			else if (type == 2) {
				col2.style.color = "#f60";
				col1.style.color = "#000";
				col3.style.color = "#000";
				indicator1.style.display = "none";
				indicator2.style.display = "block";
				indicator3.style.display = "none";
				list1.style.display = "none";
				list2.style.display = "block";
				list3.style.display = "none";
			}else {
				col3.style.color = "#f60";
				col1.style.color = "#000";
				col2.style.color = "#000";

				indicator1.style.display = "none";
				indicator2.style.display = "none";
				indicator3.style.display = "block";
				list1.style.display = "none";
				list2.style.display = "none";
				list3.style.display = "block";
			}
	}

	window.onload = function  () {
						tabswitch(1);
						
					}
</script>
