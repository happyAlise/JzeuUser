				});
				api.setFrameAttr({
					name : 'center',
					hidden : true
				});
//				$("#manage").addClass('heighlight').siblings().removeClass();
				$("#home").attr('src', './image/h_gray.png');
				$("#manage").attr('src', './image/m_green.png');
				$("#community").attr('src', './image/c_gray.png');
				$("#center").attr('src', './image/q_gray.png');
			}
			if (title == "community") {
				openUrl('community', 'html/community.html');
				$("#header").text("社区中心");
				api.setFrameAttr({
					name : 'home',
					hidden : true
				});
				api.setFrameAttr({
					name : 'manage',
					hidden : true
				});
				api.setFrameAttr({
					name : 'center',
					hidden : true
				});
//			   $("#community").addClass('heighlight').siblings().removeClass()
                $("#home").attr('src', './image/h_gray.png');
				$("#manage").attr('src', './image/m_gray.png');
				$("#community").attr('src', './image/c_green.png');
				$("#center").attr('src', './image/q_gray.png');
			}
			if (title == "center") {
				openUrl('center', 'html/center.html');
				$("#header").text("企业中心");
				api.setFrameAttr({
					name : 'home',
					hidden : true
				});
				api.setFrameAttr({
					name : 'manage',
					hidden : true
				});
				api.setFrameAttr({
					name : 'community',
					hidden : true
				});
//				$("#center").addClass('heighlight').siblings().removeClass();
				$("#home").attr('src', './image/h_gray.png');
				$("#manage").attr('src', './image/m_gray.png');
				$("#community").attr('src', './image/c_gray.png');
				$("#center").attr('src', './image/q_green.png');
			}
		}
	</script>
</html>