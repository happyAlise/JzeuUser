<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" type="text/css" href="../css/aui.css" />
	<meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>title</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css"/>
    <style>
    	.aui-bar-nav{
    	background:#fff;
    	color:#000;
    	margin-bottom:0.5rem;
    	}
    	.aui-btn{
    	background:#99cc33;
    	border-radius:0.5rem;
    	border:none;
    	width:96%;
    	margin:0 auto;
    	}
    .aui-card:after{
      border-radius:2px !important;
       }
     .aui-input-row{
     padding-left:10px;
     padding-right:10px;
     }
    	.password{
    	height:2rem;
    	line-height:2rem;
    	font-size:0.75rem;
    	width:5rem;
    	text-align:center;
    	display:inline-block;
    	margin-top:0.3rem;
    	color:#fff;
        background:#ff6600;
        border-radius: 3px;
    	}
    	input{
    	display: inline;
    	width:60% !important; 
    	}
    	.readed{
    	margin:0 auto;
    	width:100%;
    	text-align:center;
    	margin:2rem 0;
    	font-size:0.8rem;
    	}
    	.readed a{
    	color:blue;
    	text-decoration:underline;
    	}
    	.unlabed{
    	background:#ededed;
    	}
    	.point{
    	width:6rem
    	}
    </style>
</head>
<body>
	
	<header class="aui-bar aui-bar-nav" style='padding-top:20px' id='header'>
		<a class="aui-pull-left">
			<span class="aui-iconfont aui-icon-left" style="color:#ff6600" onclick="api.closeWin();"></span>
		</a>
		<div class="aui-title">重置密码</div>
	</header>
	   <div class="aui-card">
			<div class="aui-form">
				<div class="aui-input-row">
					<span class="aui-input-addon">手机号</span>
					<input type="text" class="aui-input" id="tel">
				    <p class="aui-pull-right password point" id='code'>获取验证码</p>
				</div>
				<div class="aui-input-row">
				    <span class="aui-input-addon">验证码</span>
					<input type="text" class="aui-input" id='validate' placeholder="请输入6位数验证码">
				</div>
				<div class="aui-input-row">
					<span class="aui-input-addon" style='padding-right:1.2rem;'>新密码</span>
					<input type="password" class="aui-input" id='pwd' placeholder="密码长度不能小于6位">
				</div>
				<div class="aui-input-row">
					<span class="aui-input-addon">请确认密码</span>
					<input type="password" class="aui-input" id='repwd'>
				</div>
			</div>	
		</div>
		<div class="aui-btn aui-btn-block aui-btn-success" onclick='register()'>重置密码</div>
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src="../script/jquery-1.7.2.min.js"></script>
<script type="text/javascript" src="../script/aui-toast.js" ></script>
<script type="text/javascript" src="../script/aui-dialog.js" ></script>
<script type="text/javascript" src="../script/getVerifyCode.js" ></script>
<script type="text/javascript">  
   var header=$api.byId('header');
   $api.fixStatusBar(header);
    var code;    	
    $(function (){
			$("#code").on("click",getVerifyCode({
				callBack: function (){//按钮点击后的回调函数
				var tel=$("#tel").val();
					 api.confirm({
		                title:"验证码将发送到",
		                msg:tel,
		                buttons:['确认','取消']
		               },function(ret){
		               if(ret.buttonIndex==2){
		                  return false;
		                 }
		              if(ret.buttonIndex==1){
		           	    api.showProgress({
					    title: '努力加载中...',
						text: '先喝杯茶...',
					    modal: false
						});				
		               request();
		                }
		            });
				},
				time:45,
				getCurrentTime: function (time){},
				isPhone: true,
				getPhone: function (){//获取手机号
					return $("#tel").val();
				},
				//phoneReg: /^1[34578]\d{9}$/,//手机号验证正则
				phoneCallBack: function (){//当手机号有误时的回调，默认会中止操作
				var toast = new auiToast({});
					toast.fail({
			            title:"请输入正确的手机号！",
			            duration:2000
			        }); 
				},
				timeIsUpText: "重新发送",//倒计时时间到了后按钮所显示文字
				timeRunnigText: "s后重新发送",//倒计时时间正在走的时候按钮所显示文字。默认为"xxs后重新获取"
				unabledClass: "unlabed"//按钮不能用的样式，即点击按钮后的样式
			}));
			})


  function request(){
    var tel=$("#tel").val();
         api.ajax({
		       url: 'http://106.14.69.92/Appmanager/send/sms?phone='+tel,
		       method: 'get',
	     },function(ret, err){
			api.hideProgress();
			console.log(ret.info)
			code=ret.info;
		      if (ret){	
		        api.toast({
		            msg:'验证码发送成功'
	            });
	         }
          }
  )}
  function register(){
    var pwdNum=$('#pwd').val().length>=6;
	var repwd=$('#pwd').val()==$('#repwd').val();
    var tel=$("#tel").val();
    var pwd=$('#pwd').val();
      validate=$('#validate').val();
      console.log(code)
         if(code!==validate){
         api.toast({
           msg:'您输入的验证码有误！'
         });
         return;
         }
		if(!pwdNum){
		 api.toast({
           msg:'请输入大于6位数的密码'
         });
		  return;
		} 
     	if(!repwd){
	     alert('两次输入密码不一致');
	     return;
	    }    
	    api.ajax({
	    url: 'http://106.14.69.92/Appmanager/login/Forgot?username='+tel+'&password='+pwd,
	    method: 'get',
	   }, function(ret, err){
	   console.log(JSON.stringify(ret)); 	  
	    if(ret.result=='success'){
	      api.toast({
	            msg:ret.result.info
	        });
	     api.openWin({
	            name: 'login',
	            url: './login.html',
	            pageParam:'123',
	            reload:true
	        });
	    } 
		else{
		api.toast({ msg:"您未注册!"});	
		    }
  })
}
</script>
</html>









